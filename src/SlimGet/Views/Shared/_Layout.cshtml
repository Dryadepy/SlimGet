<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
    <title>@ViewData["Title"]</title>

    <opengraph
        og-title="@this.ViewBag.OgTitle"
        og-description="@this.ViewBag.OgDescription"
        og-site-name="SlimGet"
        og-url="@this.ViewBag.OgUrl"
        og-image="@this.ViewBag.OgImage"
        og-type="website"
        og-colour-theme="#004880" />

    <environment include="Development">
        <link rel="stylesheet" href="~/css/font-awesome.css" />
        <link rel="stylesheet" href="~/css/slimget.css" />
        @if (this.Context.Request.Query["comicsans"] == "yesplease")
        {
            <link rel="stylesheet" href="~/css/secret-comicsans-mode.css" />
        }
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/font-awesome.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/slimget.min.css" asp-append-version="true" />
        @if (this.Context.Request.Query["comicsans"] == "yesplease")
        {
            <link rel="stylesheet" href="~/css/secret-comicsans-mode.min.css" asp-append-version="true" />
        }
    </environment>
</head>
<body>
    <div class="slimget-header" id="header">
        <div class="slimget-header-inner">
            <a href="@Url.RouteUrl(Routing.GalleryIndexRouteName)" class="slimget"><img src="~/images/slimget-cube-blue.png" class="slimget-logo-mini" /> SlimGet</a>
            <input type="checkbox" id="menu-collapser" class="slimget-header-collapser" />
            <label for="menu-collapser" class="slimget-header-collapser menu-opened"><i class="fas fa-times"></i> Menu</label>
            <label for="menu-collapser" class="slimget-header-collapser menu-closed"><i class="fas fa-bars"></i> Menu</label>
            <div class="slimget-header-menu">
                <a href="@Url.RouteUrl(Routing.GalleryListRouteName)" class="nav-link">Packages</a>@*
                *@<a href="@Url.RouteUrl(Routing.GalleryAboutRouteName)" class="nav-link">About</a>
            </div>
        </div>
    </div>

    <div class="slimget-content" id="main-content">
        <div class="slimget-content-inner">
            @RenderBody()
        </div>
    </div>

    <div class="slimget-footer" id="footer">
        <div class="slimget-footer-inner">
            <p>
                &copy; @(DateTime.UtcNow.Year == 2019 ? "2019" : $"2019 - {DateTime.UtcNow.Year}") Emzi0767
            </p>
            <p>
                SlimGet is <a href="https://en.wikipedia.org/wiki/Free_software" title="Free Software (Wikipedia article)">Free Software</a>,
                licensed under <a href="https://www.apache.org/licenses/LICENSE-2.0.html" title="Apache License 2.0 on Apache Software Foundation's website">Apache License 2.0</a>.
                You can obtain it and its source code from <a href="https://github.com/Emzi0767/SlimGet/" title="SlimGet on GitHub">GitHub</a>.
            </p>
        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
